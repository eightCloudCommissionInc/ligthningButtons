<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <description>This flow is called from a process that is triggered by a value change on the user record of first, last, title, email, phone or HTML Email Signature Template</description>
    <formulas>
        <description>Replaces tags in HTML code to populate with user&apos;s field data (ie first, last, title, email, phone, etc.)</description>
        <name>InputUserData</name>
        <dataType>String</dataType>
        <expression>substitute(substitute(substitute(substitute(substitute(substitute({!HTML}, &quot;{{FirstName}}&quot;, {!FirstName}), &quot;{{LastName}}&quot;,{!LastName}),&quot;{{Phone}}&quot;, {!Phone}),&quot;{{Email}}&quot;, {!Email}),&quot;{{Title}}&quot;, {!Title}),&quot;{{MobilePhone}}&quot;, {!MobilePhone})</expression>
    </formulas>
    <interviewLabel>Update Rich Text Signature {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Update Rich Text Signature</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Look up custom metadata type to get HTML template by the name of the HTML Email Template selected on the User record.</description>
        <name>LookupHTMLSignature</name>
        <label>LookupHTMLSignature</label>
        <locationX>163</locationX>
        <locationY>164</locationY>
        <assignNullValuesIfNoRecordsFound>true</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>UpdateRichTextSignature</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>MasterLabel</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>HTMLEmailSignatureTemplate</elementReference>
            </value>
        </filters>
        <object>Email_Signature_HTML__mdt</object>
        <outputAssignments>
            <assignToReference>HTML</assignToReference>
            <field>HTML__c</field>
        </outputAssignments>
    </recordLookups>
    <recordLookups>
        <description>Get fields from user record (ie first, last, title, email, phone, etc.)</description>
        <name>LookupUser</name>
        <label>LookupUser</label>
        <locationX>302</locationX>
        <locationY>92</locationY>
        <assignNullValuesIfNoRecordsFound>true</assignNullValuesIfNoRecordsFound>
        <object>User</object>
        <outputReference>User</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>FirstName</queriedFields>
        <queriedFields>LastName</queriedFields>
        <queriedFields>Title</queriedFields>
        <queriedFields>Email</queriedFields>
        <queriedFields>Phone</queriedFields>
        <queriedFields>MobilePhone</queriedFields>
        <queriedFields>Department</queriedFields>
        <queriedFields>CompanyName</queriedFields>
    </recordLookups>
    <recordUpdates>
        <name>UpdateRichTextSignature</name>
        <label>UpdateRichTextSignature</label>
        <locationX>163</locationX>
        <locationY>334</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>UserId</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Rich_Text_Signature__c</field>
            <value>
                <elementReference>InputUserData</elementReference>
            </value>
        </inputAssignments>
        <object>User</object>
    </recordUpdates>
    <startElementReference>LookupHTMLSignature</startElementReference>
    <status>Draft</status>
    <variables>
        <name>Email</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>FirstName</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>HTML</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>HTMLEmailSignatureTemplate</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>LastName</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>MobilePhone</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>Phone</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>Title</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>User</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
        <objectType>User</objectType>
    </variables>
    <variables>
        <name>UserId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
</Flow>
