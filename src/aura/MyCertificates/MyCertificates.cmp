<aura:component description="CEUs" controller="MyCertificatesCtrl" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
       <aura:attribute name="ceudata" type="Object"/>
    <aura:attribute name="ceucolumns" type="List"/>
    <aura:attribute name="cbaseURL" type="String"/>
    <aura:attribute name="isMobile" type="Boolean" access="public"/>
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
       
   <!-- Couldn't use this because product adds the checkbox at the start of each row
<framework:datatable data="{!v.ceudata }"
        columns="{!v.ceucolumns}" hideCheckboxColumn="true" keyField="id" onrowaction="{!c.viewRecord}"
        />      <a href="{!v.cbaseURL+'/apex/ViewCertificate?ceuid=' + contact.Id }" data-id="{!contact.Name}" target="_Blank"> View Certificate</a>

      
    </div>-->
     <div class="slds-scrollable_x slds-size_1-of-1"> 
      <!-- <div style="font-size:large;font-weight: bold;font-style: italic;color:#F89D26;">{!$Label.c.CertificateText}</div> -->
         <br/><table class="slds-table slds-table--bordered slds-table--striped pfm-custom-table_row-resize">
        <thead>
            <tr>
                <th scope="col">CERTIFICATION AND CEU NAME</th>
                <th scope="col">CONTACT HOURS</th>
                <th scope="col">NUMBER OF CREDITS</th>
                <th scope="col">AWARDED DATE</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <aura:iteration items="{!v.ceudata}" var="contact">
                <tr>
                    <td width="45%" style=" white-space: inherit !important;">{!contact.Name}</td>
                    <td width="15%" >{!contact.FON_Contact_Hours__c}</td>
                    <td width="15%">{!contact.FON_Number_of_Credits__c}</td> 
                    <td width="15%">{!contact.FON_Awarded_Date__c}</td>
                    <td width="10%">
                       <!-- <a href="{!'/apex/ViewCertificate?ceuid=' + contact.Id }" data-id="{!contact.Name}" target="_Blank"> View Certificate</a>-->
                        <a href="{!v.cbaseURL+'/apex/ViewCertificate?ceuid=' + contact.Id }" data-id="{!contact.Name}" target="_Blank"> View Certificate</a>

                    </td>
                </tr>
            </aura:iteration>
            
        </tbody>
    </table>
         
        </div>  
</aura:component>